{
  "name": "vnlog",
  "version": "1.0.1",
  "description": "Smart logger with environment detection and rich formatting",
  "keywords": [
    "logger",
    "logging",
    "debug",
    "console",
    "typescript"
  ],
  "author": "xvno",
  "repository": {
    "type": "git",
    "url": "https://github.com/xvno/vnlog.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=10.0.0"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "npm run build:clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "build:clean": "rm -rf dist",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs --declaration false",
    "build:esm": "tsc --module esnext --outDir dist/esm --declaration false",
    "build:types": "tsc --emitDeclarationOnly --outDir dist/types",
    "test": "echo 'Tests will be implemented after successful build'",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "typescript": "^4.9.0",
    "@types/node": "^12.0.0"
  },
  "sideEffects": false
}
